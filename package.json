{
  "name": "RestApiFinder",
  "displayName": "RestApiFinder",
  "description": "point the http request in ts/js/vue",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": [
      {
        "type": "object",
        "title": "RestApiFinder",
        "properties": {
          "api.requestInstanceRegx": {
            "type": "string",
            "default": "^(Axios|axios|api|uapi)$",
            "description": "regex for recognize requestInstance"
          },
          "api.modules": {
            "type": "array",
            "default": [
              {
                "base": 1171384
              },
              {
                "course": 1206894
              },
              {
                "exam": 951044
              }
            ],
            "description": "restfullApi servername and apifox projectIds"
          },
          "apifox.authentication": {
            "type": "string",
            "default": "",
            "description": "apifox authentication code"
          }
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "api-container",
          "title": "API LIST",
          "icon": "resources/icons/api-tree-container.svg"
        }
      ]
    },
    "views": {
      "api-container": [
        {
          "type": "webview",
          "id": "api.views.search",
          "name": "filter",
          "initialSize": 300
        },
        {
          "id": "api-tree-view",
          "name": "All Request"
        }
      ],
      "explorer": [
        {
          "id": "api.views.explorer",
          "name": "api explorer"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "RestApiFinder.refreshEntry",
          "when": "view == api-tree-view",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "RestApiFinder.refreshEntry",
        "title": "Refresh Tree",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "RestApiFinder.setfilter",
        "title": "set filter"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/lodash-es": "^4.17.8",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "@babel/parser": "^7.22.7",
    "globby": "^13.2.2",
    "lodash-es": "^4.17.21",
    "recast": "^0.23.3"
  }
}
